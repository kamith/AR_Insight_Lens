<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="?attr/endColor"/> <!-- Background color of the progress bar -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="?attr/startColor"/> <!-- Your desired progress bar color (Green) -->
            </shape>
        </clip>
    </item>
</layer-list>